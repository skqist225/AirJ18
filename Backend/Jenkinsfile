pipeline {
    agent any 
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Build') {
            steps {
                sh 'echo $(pwd)'
                sh 'mvn clean package --file */pom.xml'
            }
            post {
                success {
                    echo 'Now archiving the artifacts...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
        // stage('Get artifact from s3 bucket') {

        // }
        // stage('Deploy') {

        // }
    }
}